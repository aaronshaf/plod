{
  "name": "@aaronshaf/plod",
  "version": "0.1.0",
  "description": "CI build failure feedback loop automation with Claude Code Agent SDK",
  "type": "module",
  "bin": {
    "plod": "./bin/plod"
  },
  "main": "./index.ts",
  "module": "./index.ts",
  "exports": {
    ".": {
      "import": "./index.ts",
      "types": "./index.ts"
    },
    "./services/config": {
      "import": "./src/services/config.ts",
      "types": "./src/services/config.ts"
    },
    "./schemas/config": {
      "import": "./src/schemas/config.ts",
      "types": "./src/schemas/config.ts"
    }
  },
  "engines": {
    "bun": ">=1.2.0"
  },
  "scripts": {
    "dev": "bun run src/cli/index.ts",
    "build": "tsc --noEmit && echo 'Build successful - CLI runs directly with bun'",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "format": "biome format --write src/",
    "format:check": "biome check src/",
    "check:all": "bun run typecheck && bun run test && bun run format:check"
  },
  "keywords": [
    "ci",
    "build",
    "automation",
    "claude",
    "agent",
    "cli",
    "effect",
    "typescript"
  ],
  "author": "Aaron Shafovaloff",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aaronshaf/plod.git"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.30",
    "@effect/platform": "^0.90.10",
    "@effect/platform-node": "^0.94.2",
    "@effect/schema": "^0.75.5",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "effect": "^3.18.4",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@types/node": "^24.3.1",
    "bun-types": "^1.2.21",
    "typescript": "^5.9.2"
  }
}
